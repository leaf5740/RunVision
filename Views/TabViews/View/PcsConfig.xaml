<Window x:Class="RunVision.Views.TabViews.View.PcsConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunVision.Views.TabViews.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="配置PCS 序号" Height="450" Width="800">
    
    <StackPanel Margin="20">
        <TextBlock Text="PCS 序号：" Margin="0,0,0,5"/>
        <TextBox Width="600" Text="{Binding Pcs, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="确定"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding OkCommand}"/>
            <Button Content="取消"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
    
</Window>